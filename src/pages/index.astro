---
import Layout from '../layouts/Layout.astro';

---

<Layout>
	    <style>
      html, body, canvas {
        margin: 0;
        padding: 0;
        overflow: hidden;
        width: 100vw;
        height: 100vh;
        background: black;
      }
    </style>
    <div class="relative">
      <canvas id="webgl-canvas"></canvas>
      <div class="max-w-2xl flex flex-col gap-4 absolute bottom-12 left-12">
        <h1 class="flex flex-col gap-1">
          <span class="text-base/7 font-semibold text-red-400">Kevin Letchford</span>
          <span class="font-space  max-w-lg text-4xl font-semibold tracking-tight text-pretty sm:text-5xl load-effect">Design Engineer</span>
        </h1>
        <p class="text-xl text-pretty text-white/60 load-effect" data-speed="3">I craft exceptional web experiences through the intersection of design and engineering. Specializing in interactive interfaces, performance optimization, and bringing complex ideas to life.</p>
      </div>
    </div>

</Layout>
 <script type="module" src="/src/scripts/space.ts"></script>
<script type="module" src="/src/scripts/text-animation.ts"></script>